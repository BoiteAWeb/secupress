<?xml version="1.0"?>
<ruleset name="SecuPress">
	<description>Security plugin for WordPress by WP Media.</description>

	<arg name="extensions" value="php"/>
	<arg value="s"/>

	<file>secupress.php</file>
	<file>uninstall.php</file>

	<file>inc/admin</file>
	<file>inc/front</file>
	<file>inc/functions</file>
	<file>inc/classes</file>
	<file>inc/modules/alerts</file>
	<file>inc/modules/antispam</file>
	<file>inc/modules/backups</file>
	<file>inc/modules/discloses</file>
	<file>inc/modules/file-system</file>
	<file>inc/modules/firewall</file>
	<file>inc/modules/logs</file>
	<file>inc/modules/plugins-themes</file>
	<file>inc/modules/pro</file>
	<file>inc/modules/schedules</file>
	<file>inc/modules/sensitive-data</file>
	<file>inc/modules/services</file>
	<file>inc/modules/users-login</file>

	<file>inc/admin-bar.php</file>
	<file>inc/cron.php</file>
	<file>inc/network-options-autoload.php</file>

	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*/secupress-free/inc/modules/users-login/plugins/inc/php/base32.php</exclude-pattern>

	<rule ref="WordPress">
		<exclude name="Generic.PHP.NoSilencedErrors.Discouraged"/>
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent"/>
		<exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
		<exclude name="Squiz.Commenting.BlockComment.NoEmptyLineBefore"/>
		<exclude name="Squiz.Commenting.BlockComment.NoNewLine"/>
		<exclude name="Squiz.Commenting.FileComment.Missing"/>
		<exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
		<exclude name="Squiz.Commenting.FileComment.WrongStyle"/>
		<exclude name="Squiz.Commenting.InlineComment.SpacingAfter"/>
		<exclude name="Squiz.PHP.CommentedOutCode.Found"/>
		<exclude name="WordPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar"/>
		<exclude name="WordPress.Variables.GlobalVariables.OverrideProhibited"/>
		<exclude name="WordPress.VIP"/>
		<exclude name="WordPress.WP.EnqueuedResources.NonEnqueuedStylesheet"/>
		<exclude name="WordPress.XSS.EscapeOutput"/>
	</rule>

	<rule ref="Generic.Strings.UnnecessaryStringConcat.Found">
		<exclude-pattern>*/secupress-free/inc/modules/firewall/callbacks.php</exclude-pattern>
		<exclude-pattern>*/secupress-free/inc/modules/users-login/tools.php</exclude-pattern>
	</rule>

	<rule ref="WordPress.Arrays.ArrayDeclaration.ValueNoNewline">
		<exclude-pattern>*/secupress-free/inc/modules/users-login/tools.php</exclude-pattern>
	</rule>
</ruleset>
